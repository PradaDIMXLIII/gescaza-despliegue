<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">

    <mapped-superclass class="es.prada.cazador.Animal" access="FIELD">
        <attributes>        	
            <basic name="raza" optional="false" />
            <basic name="sexo" optional="false" />
            <basic name="tipoAnimal" optional="false" />
            <basic name="fechaNacimiento" />
            <transient name="observaciones"/>
            <transient name="nivelAdiestramiento"/>
        </attributes>
    </mapped-superclass>

</entity-mappings>